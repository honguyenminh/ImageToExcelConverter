<Window x:Name="Main_Windows" x:Class="ImageToExcelConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image to Excel File Converter" Height="190" Width="400" ResizeMode="CanMinimize">
	<Grid>
		<Label x:Name="Title" Content="A fairly simple Image to Excel converter" HorizontalAlignment="Left" Margin="18,11,0,0" VerticalAlignment="Top" Height="41" Width="420" VerticalContentAlignment="Center" FontSize="20" FontStyle="Italic" Padding="5,5,0,5"/>

		<Label Content="Excel file export type:" HorizontalAlignment="Left" Margin="22,55,0,0" VerticalAlignment="Top" Height="22" Width="125" VerticalContentAlignment="Center" Padding="0"/>
		<ComboBox HorizontalAlignment="Left" Margin="22,77,0,0" VerticalAlignment="Top" Width="145"/>

		<Button Content="Convert" Margin="0,0,18,18" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="80" Height="25" IsDefault="True" ToolTip="Start converting" Click="Button_Convert_Click"/>
		<Button Content="Cancel" HorizontalAlignment="Right" Margin="0,0,110,18" VerticalAlignment="Bottom" Width="80" Height="25" Click="Button_Cancel_Click" IsCancel="True" ToolTip="Quit the app"/>
	</Grid>
</Window>
